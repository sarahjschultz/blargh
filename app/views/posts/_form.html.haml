= form_for :post, url: posts_path do |f|
  -if @post.errors.any?
    #errors
      %h2
        = pluralize(@post.errors.count, "error")
        prevented this post from saving:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  = f.label :title
  = f.text_field :title
  %br
  %br
  = f.label :body
  = f.text_field :body
  %br
  %br
  = f.submit
